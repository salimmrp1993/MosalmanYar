<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#222fb4"
                android:endColor="#202db1"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#2130c4" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#1a237e"
                android:startColor="#1a237e"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#1a237e" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#1a237e"
                android:startColor="#4a58e6"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#212fbe" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
